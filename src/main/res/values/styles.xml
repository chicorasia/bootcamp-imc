<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="titulo__vermelho">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/indigo_900</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">24dp</item>
    </style>

    <style name="input_style">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="rotulos_campos">
        <item name="android:textAlignment">textEnd</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="edt_campo">
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="resultado_texto">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>